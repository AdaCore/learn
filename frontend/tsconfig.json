{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "sourceMap": true,
        "allowJs": true,
        "target": "es2022",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "strict": true,
        "lib": ["es2022"],
        "module": "CommonJS",
        "moduleResolution": "node"
    },
    "include": [
        "./src/**/*"
    ]
}
